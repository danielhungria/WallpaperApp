<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WallPaperApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9B67D8</item>
        <item name="colorPrimaryVariant">#0C0C0C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/top_bar_color</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomToolbar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">#171717</item>
        <item name="android:textColor">@color/text_color_white_forever</item>
        <item name="navigationIconTint">#FFFFFF</item>
    </style>
</resources>